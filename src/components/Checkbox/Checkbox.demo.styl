.container {
	display: inline-block;

	input[type="checkbox"] {
		position: absolute;
		clip: rect(0,0,0,0);
	}
	&__checkboxIcon {
		color: #fff;
		visibility: hidden;
	}
	&__checkboxIconChecked {
		visibility: visible;
	}
	&__view {
		display: inline-block;
		float: left;
		width: 12px;
		height: @width;
		outline: none;
		border: 1px solid;
		border-radius: 1px;
		margin-right: 10px;
		line-height: @height;
		border-color: #3b3b3b;
		box-shadow: 0 1px 0 rgba(#000000, .7) inset;
		background-color: #202020;

		&:hover {
			background-color: lighten(#202020, 5);
			border-color: gold;
			color: gold;
		}
	}
	&__checkboxIcon {
		display: block;
		margin: 0 auto;
		width: 10px;
		height: @width;
		line-height: @height;
	}
	&__disabled {
		.container__view {
			background-color: darken(#202020, 5);
			border-color: darken(#3b3b3b, 5);
		}
		color: #ccc;
		&:hover {
			.container__view {
				background-color: darken(#202020, 5);
				border-color: darken(#3b3b3b, 5);
				color: #ccc;
			}
		}
	}
}