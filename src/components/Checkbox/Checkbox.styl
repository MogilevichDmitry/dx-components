.container {
	display: inline-block;
	position: relative;

	input[type="checkbox"] {
		position: absolute;
		clip: rect(0,0,0,0);
	}
	input[type="checkbox"] + label {
		display: inline-block;
		.container__checkboxIcon {
			visibility: hidden;
		}

	}
	input[type="checkbox"]:checked + label {
		display: inline-block;
		.container__checkboxIcon {
			visibility: visible;
		}
	}
	&__checkboxIcon {
		display: block;
		margin: 0 auto;
	}
}