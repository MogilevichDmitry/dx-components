.container {
	display: inline-block;
	position: relative;

	.input {
		position: absolute;
		clip: rect(0,0,0,0);
	}

	.checkboxIcon {
		display: block;
		margin: 0 auto;
		visibility: hidden;
	}

	.checkboxIcon_isChecked {
		visibility: visible;
	}
	.view {
		display: inline-block;
		position: relative;
	}
}