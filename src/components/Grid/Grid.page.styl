@require '../Scrollable/Scrollable.config.styl';

.container {
	background-color: #161412;
}

.gridBody {
	max-height: 300px;
}
	
.gridHead {
	background-color: #242424;
	&_paddedForScrollbar {
		padding-right: $scrollableScrollBarSize;
	}
}

.cell {
	&_first {
		width: 500px;
	}
	&_second {
		width: 400px;
	}
	&_third {
		width: 600px;
	}
}