@require '../Scrollable/Scrollable.config.styl';

.container {
	overflow: hidden;
}
	
.cell {
	&_left {
		text-align: left;
	}
	&_center {
		text-align: center;
	}
	&_right {
		text-align: right;
	}
}
	
.gridCell {
	&__placeholder {
		display: inline-block;
	}
		
	&__content {
		display: inline-block;
		&_left {
			composes: gridCell__content;
			text-align: left;
		}
		&_center {
			composes: gridCell__content;
			text-align: center;
		}
		&_right {
			text-align: right;
		}
	}
}
	
.gridHead {
	&_paddedForScrollbar {
		padding-right: $scrollableScrollBarSize;
	}
}