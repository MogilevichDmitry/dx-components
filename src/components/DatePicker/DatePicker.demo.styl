@require "./DatePicker.styl";

.container {
	height: 21px;
}

.popover {
	&__container {
	}

	&__content {
		padding: 0;
	}
}

.field {
	height: 100%;

	&_invalid {
		background: #b22121;
	}
}

.openCalendar {
	background: transparent;
	border: none;
	width: 17px;
	padding: 0;
	height: 100%;
	margin-left: 7px;

	&__icon {
		fill: #6cb5d9;
		width: 100%;
		height: 100%;
	}
}