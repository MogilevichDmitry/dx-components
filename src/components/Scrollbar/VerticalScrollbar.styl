@require '~config';

@require './Scrollbar.config.styl';
@require './Scrollbar.styl';

.container {
	top: 0;
	right: 0;
	bottom: 0;
	padding: ($scrollableScrollBarButtonSize + $scrollableScrollBarExtremeButtonSize) 0;
	width: $scrollableScrollBarSize;
}

.button {
	position: absolute;
	right: 0;
	width: 100%;
	height: $scrollableScrollBarButtonSize;
}

.buttonToStart {
	top: 0;
}
.buttonBackward {
	top: $scrollableScrollBarExtremeButtonSize;
}

.buttonForward {
	bottom: $scrollableScrollBarExtremeButtonSize;
}

.buttonToEnd {
	bottom: 0;
}

.track {
	width: 100%;
	height: 100%;
}

.bar {
	min-height: $scrollableMinBarSize;
}

.containerIsVisible {

	visibility: inherit;
	z-index: auto;

	&:global(.withBothScrollabars) {
		bottom: $scrollableScrollBarSize;
		&:after {
			content: '';
			position: absolute;
			bottom: -($scrollableScrollBarSize);
			width: $scrollableScrollBarSize;
			height: @width;
			background-color: inherit;
		}
	}
}