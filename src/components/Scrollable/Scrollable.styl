@require './Scrollable.config.styl';

.container {
	overflow: hidden;
	position: relative;
}
	
.wrapper {
	display: block;
	width: 100%;
	height: 100%;
}

.container {
	padding: 0;
	overflow: scroll;
	box-sizing: border-box;
}
	
.content {
	// display inline-block allows to take the width more 100% width parent
	// see scroll on history and order widget by example
	display: inline-block;
	vertical-align: middle;
	position: relative;
	min-width: 100%;
}
	
.scrollbar {
	hide() {
		visibility: hidden;
		z-index: -1;
	}
	
	show() {
		visibility: inherit;
		z-index: auto;
	}
		
	position: absolute;
	box-sizing: border-box;
	hide();
	
	&__button {
		display: none unless $scrollableScrollBarButtonSize > 0;
	}
	
	&_vertical {
		top: 0;
		right: 0;
		bottom: 0;
		padding: ($scrollableScrollBarButtonSize + $scrollableScrollBarExtremeButtonSize) 0;
		width: $scrollableScrollBarSize;
		
		.container_withVerticalScrollbar > .wrapper > & {
			show();
		}
		.container_withHorizontalScrollbar > .wrapper > & {
			bottom: $scrollableScrollBarSize;
		}
	}
	
	&_horizontal {
		bottom: 0;
		left: 0;
		right: 0;
		padding: 0 ($scrollableScrollBarButtonSize + $scrollableScrollBarExtremeButtonSize);
		height: $scrollableScrollBarSize;
		
		.container_withHorizontalScrollbar > .wrapper > & {
			show();
		}
		.container-withVerticalScrollbar > .wrapper > & {
			right: $scrollableScrollBarSize;
		}
	}
	
	&__track {
		position: relative;
	}
	
	&__bar {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
	}
	
	&_vertical {
		composes: scrollbar;
		
		.scrollbar {
			&__button {
				position: absolute;
				right: 0;
				width: 100%;
				height: $scrollableScrollBarButtonSize;
				
				&-toStart {
					top: 0;
				}
				
				&-backward {
					top: $scrollableScrollBarExtremeButtonSize;
				}
				
				&-forward {
					bottom: $scrollableScrollBarExtremeButtonSize;
				}
				
				&-toEnd {
					bottom: 0;
				}
				
			}
			&--track {
				width: 100%;
				height: 100%;
			}
			&--bar {
				min-height: $scrollableMinBarSize;
			}
		}
	}
	
	&_horizontal {
		.scrollbar {
			&--button {
				position: absolute;
				bottom: 0;
				width: $scrollableScrollBarButtonSize;
				height: 100%;
				
				&-toStart {
					left: 0;
				}
				
				&-backward {
					left: $scrollableScrollBarExtremeButtonSize;
				}
				
				&-forward {
					right: $scrollableScrollBarExtremeButtonSize;
				}
				
				&-toEnd {
					right: 0;
				}
			}
			&--track {
				height: 100%;
			}
			
			&--bar {
				min-width: $scrollableMinBarSize;
			}
		}
	}
}