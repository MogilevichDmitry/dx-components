.container {
	&__anchor {
		&__text {
			composes: ellipsis from '../../util/helpers.styl';
		}
		&__content {
			text-align: left;
			&_hasCaret {
				position: relative;
				.container__anchor__caret {
					display: block;
					position: absolute;
					right: 0;
					top: 50%;
					transform: translateY(-50%);
					&_isReversed {
						transform: translateY(-50%) rotate(-180deg);
					}
				}
			}
		}
	}
	
	&__item {
		&__text {
			composes: ellipsis from '../../util/helpers.styl';
		}
	}
	
	&__menu {
		&_hasSelectedItem {
			.container__item {
				position: relative;
				&__activeIcon {
					display: block;
					position: absolute;
					right: 0;
					top: 50%;
					transform: translateY(-50%);
				}
			}
		}
	}
}