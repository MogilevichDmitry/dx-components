.container {
	margin-left: 10px;
	margin-right: 10px;
	min-width: 150px;
	&__wrapper {
		display: block;
	}
	&__item {
		width: 150px;

		&:first-child {
			margin-right: -1px;
		}

		&:last-child {
			margin-left: -1px;
		}

		&__active {
			border: 1px;
			background-color: silver;
			&:active:not(:disabled) {
				top: 0;
				background-color: silver;
			}
		}
	}
	&__vertical {
		width: 150px;
		display: block;

		&:first-child {
			margin-right: 0;
			margin-bottom: -1px;
		}

		&:last-child {
			margin-left: 0;
			margin-top: -1px;
		}
	}
}