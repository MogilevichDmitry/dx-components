.container {
	width: 150px;

	&:first-child {
		margin-right: -1px;
	}

	&:last-child {
		margin-left: -1px;
	}

	&_vertical {
		display: block;

		&:first-child {
			margin-right: 0;
			margin-bottom: -1px;
		}

		&:last-child {
			margin-left: 0;
			margin-top: -1px;
		}
	}
	&_active {
		border: 1px;
		background-color: silver;
		&:active:not(:disabled) {
			top: 0;
			background-color: silver;
		}
	}
}