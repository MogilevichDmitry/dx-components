@require "./Calendar.styl";

.container {
	font-size: 10px;
	padding: 0 5px 5px;
}

.header {
	border-bottom: 1px solid gray;
	padding: 10px 0;
	font-size: 12px;
	font-weight: bold;
	user-select: none;
	text-align: center;
	vertical-align: middle;

	&__text {
		margin: 0 14px;
	}
}

.changeMonth {
	&__container {
		background: transparent;
		border: none;
		box-shadow: none;
		vertical-align: top;
		height: 12px;
	}

	&__icon {
		height: 12px;
		width: 12px;
	}
}

.month {

}

.monthHeader {
	&__day {
		display: inline-block;
		width: (100 / 7) %;
		text-align: center;
		vertical-align: middle;
		min-width: 25px;
	}
}

.week {

}

.day {
	display: inline-block;
	width: (100 / 7) %;
	text-align: center;
	vertical-align: middle;
	min-width: 25px;
}