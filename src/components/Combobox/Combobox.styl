.container {
	position: relative;

	.input {
		position: relative;
		width: 100%;
		height: 100%;
	}

	&__anchor {
		padding-top: 0;
		padding-bottom: 0;
		width: 100%;
		height: 100%;
		box-sizing border-box;

		&__caret {
			z-index: 2
		}

		&__content {
			position: relative;
			width: 100%;
			height: 100%
			box-sizing border-box;
		}

	}
}

.selectbox {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	overflow: hidden;
}

